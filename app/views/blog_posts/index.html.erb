<h1>My Blog</h1>
<p><%= link_to "Create new Blog Post", new_blog_post_path %></p>
<% @blog_posts.each do |blog_post| %>
    <article class="border my-6 px-4 shadow-lg pb-6">
        <h2><%= link_to blog_post.title, blog_post %></h2>
        <p><%= blog_post.body %></p>
        <% if blog_post.draft? %>
            <span class="bg-gray-200 rounded py-2 px-4">Draft</span>
        <% elsif blog_post.scheduled? %>
            <span class="bg-indigo-100 rounded py-2 px-4">Scheduled</span>
        <% end %>
        
    </article>
<% end %>
